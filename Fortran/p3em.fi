interface
    function p3em_init(p3em,name) bind(c)
        use, intrinsic :: iso_c_binding
        type(c_ptr) :: p3em
        character(len=1,kind=c_char) :: name(*)
        integer(c_int) :: p3em_init
    end function
    subroutine p3em_cleanup(p3em) bind(c)
        use, intrinsic :: iso_c_binding
        type(c_ptr), value :: p3em
    end subroutine
    function p3em_getlatestvalue(p3em) bind(c,name="p3em_getLatestValue")
        use, intrinsic :: iso_c_binding
        type(c_ptr), value :: p3em
        integer(c_int) :: p3em_getlatestvalue
    end function
end interface
